---
// Layout
import Layout from "@layouts/Layout.astro";

// About collection
import { getCollection } from "astro:content";
import { Picture } from "@astrojs/image/components";

// Get the about collection
const AboutEntries = await getCollection("about");

// Fragment
---

<Layout title="About">
  <Fragment slot="title">About Us</Fragment>
  <Fragment slot="desc">Just a bit about us and our team</Fragment>

  <ul>
    {
      AboutEntries.map((about, index) => (
        <li class="bg-slate-100 rounded-lg p-2 hover:bg-slate-200 duration-100">
          <div class="grid md:grid-cols-2 gap-5 md:gap-10 items-center">
            <Picture
              src={about.data.image}
              alt={about.data.imageAlt}
              sizes="(max-width: 800px) 100vw, 800px"
              widths={[200, 400, 800]}
              aspectRatio="16:9"
              background="#ffffff"
              fit="cover"
              position="center"
              loading={index <= 2 ? "eager" : "lazy"}
              decoding={index <= 2 ? "sync" : "async"}
              class="w-full rounded-md"
            />
            <div>
              <span class="text-blue-400 uppercase tracking-wider text-sm font-medium">
                {about.data.staff}
              </span>

              <h2 class="text-3xl font-semibold leading-snug tracking-tight mt-1 ">
                {about.data.title}
              </h2>

              <div class="flex gap-2 mt-3">
                
                
                
              </div>
            </div>
          </div>
        </li>
      ))
    }
  </ul>

  <main>
    <div class="about-doctor-container">
      <div class="about-img">
        <img
          src="https://res.cloudinary.com/dcix3cz9j/image/upload/v1681582654/Photo_2_mjlijo.jpg"
          class="rounded-md"
        />
      </div>
      <div class="about-txt">
        <span
          ><h1 class="text-6xl font-bold">Dr. Edwin Nieves</h1>
          <h1 class="text-slate-400 mb-4">Primary Doctor</h1></span
        >
        <p>
          Dr. Edwin J. Nieves was born in Puerto Rico. He obtained his medical
          degree at PUCMM in Dominican Republic. Dr. Edwin J. Nieves later moved
          to Puerto Rico and completed the Medical Internship Program at Manat√≠
          Medical Center. He has over 7 years of experience in the fields of
          family and emergency medicine. He focused on the health care of the
          elderly to promote health by preventing and treating diseases and
          disabilities. Dr. Edwin J. Nieves enjoys building relationship and
          working with all his patients to help them establish their goals and
          needs giving a personalized care by listening to their medical
          concerns and encouraging their involvement in important decisions.
        </p>
      </div>
    </div>
  </main>
  <div></div>
</Layout>
